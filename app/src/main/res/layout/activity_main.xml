<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/CLMA"
    android:background="@color/constraintBG">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="399dp"
        android:layout_height="566dp"
        android:layout_marginTop="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </FrameLayout>

    <ImageView
        android:id="@+id/favsButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:onClick="favsFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.708"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintVertical_bias="0.357"
        app:srcCompat="@drawable/icon" />

    <ImageView
        android:id="@+id/gamesButton"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:onClick="gamesFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintVertical_bias="0.346"
        app:srcCompat="@drawable/vector2"


        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="57dp"
        android:layout_height="23dp"
        android:text=" Games"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamesButton"
        android:paddingLeft="4dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"

        android:text="Favorites"
        android:paddingRight="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favsButton" />

    <TextView
        android:id="@+id/textView7"

        android:layout_width="352dp"
        android:layout_height="51dp"
        android:fontFamily="@font/sfprodisplay"
        android:paddingLeft="15dp"
        android:text="SECTION"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425">

    </TextView>

    <SearchView
        android:id="@+id/sView"
        android:layout_width="364dp"

        android:layout_height="41dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/border"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Search for the games..."
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"

        >


    </SearchView>


</androidx.constraintlayout.widget.ConstraintLayout>